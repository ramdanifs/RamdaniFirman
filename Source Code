package uastebakangka;

/**
 *
 * @author WINDOWS 10
 */
import java.util.Scanner;
import java.util.Random;

public class UASTEBAKANGKA {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();

        int randomNumber = random.nextInt(100) + 1;
        int attempts = 0;

        System.out.println("Selamat datang di permainan tebak angka!");
        System.out.println("Saya akan menebak sebuah angka antara 1 sampai 100.");
        System.out.println("Jawab 'Y' jika tebakan saya benar atau 'T' jika salah.");
        System.out.println("-------------------------------------------------------");

        while (true) {
            System.out.printf("Tebakan ke-%d: %d%n", attempts + 1, randomNumber);
            System.out.print("Jawab: ");
            String answer = scanner.next();

            if (answer.equalsIgnoreCase("Y")) {
                System.out.println("Akhirnya Saya benar! Terima kasih sudah bermain :).");
                break;
            } else if (answer.equalsIgnoreCase("T")) {
                System.out.println("Saya salah :{, Saya akan mencoba lagi.");
                randomNumber = random.nextInt(100) + 1;
                attempts++;
            } else {
                System.out.println("Jawabannya hanya 'Y' atau 'T', Coba lagi!");
            }
        }

        scanner.close();
    }
    
}
